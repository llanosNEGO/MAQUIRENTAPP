<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- estado seleccionado: dibuja un rectángulo con borde celeste y fondo semitransparente -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#9DB2CE"/>  <!-- color 9DB2CE con algo de alpha -->
            <stroke
                android:width="2dp"
                android:color="#9DB2CE"/>     <!-- borde celeste sólido -->
            <corners android:radius="50dp"/>
        </shape>
    </item>
    <!-- estado normal: transparente -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
</selector>
