<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.maquirentapp.HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_CGE"
            app:destination="@+id/cgeFragment" />

        <action
            android:id="@+id/action_homeFragment_to_nuevoAlquilerFragment"
            app:destination="@id/nuevoAlquilerFragment" />

        <action
            android:id="@+id/action_home_to_Perfil"
            app:destination="@id/perfilFragment" />
        <!--        <action-->
        <!--            android:id="@+id/action_homeFragment_to_cotizacionesFragment"-->
        <!--            app:destination="@id/cotizacionesFragment" />-->
    </fragment>

    <fragment
        android:id="@+id/cgeFragment"
        android:name="com.example.maquirentapp.CGEFragment"
        tools:layout="@layout/fragment_cge">

        <action
            android:id="@+id/action_cge_to_Inicio"
            app:destination="@+id/homeFragment"/>

        <action
            android:id="@+id/action_cge_to_Perfil"
            app:destination="@+id/perfilFragment"/>
    </fragment>

    <fragment
        android:id="@+id/perfilFragment"
        android:name="com.example.maquirentapp.PerfilFragment"
        tools:layout="@layout/fragment_perfil" />

    <fragment
        android:id="@+id/nuevoAlquilerFragment"
        android:name="com.example.maquirentapp.NuevoAlquilerDiaFragment"
        tools:layout="@layout/fragment_nuevo_alquiler_dia" />

